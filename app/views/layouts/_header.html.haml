%nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
  =link_to "Jobs Portal", root_path, class: 'navbar-brand'
  #navbarCollapse.collapse.navbar-collapse
  %ul.navbar-nav
    - if current_user
      %li.nav-item
        %a.nav-link{:href => "#"}
          = "Welcome #{current_user.name} { #{current_user.type} }"
      %li.nav-item
        =button_to 'Log Out', logout_path, method: :delete, class: "btn btn-outline-success"
    - else
      %li=link_to 'Log In', login_path, class: "btn btn-outline-success"