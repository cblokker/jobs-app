.container
  .row
    .col-md-4.mx-auto
      %h3.text-center Create a new job posting
      = form_for @job, url: jobs_path do |f|
        = f.text_field :title, placeholder: 'job title', class: 'form-control'
        %br
        = f.text_area :description, placeholder: 'job description', class: 'form-control'
        %br
        = f.submit 'New Job', class: 'btn btn-lg btn-primary btn-block'